<section class="project-form">
  <%= form_for(@category, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
    <div class="form-group">
      <div class="col-md-2 project-form__label-container">
        <%= f.label :name, class: 'control-lab' %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter the category name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-md' %>
        <% unless @category.new_record? %>
          <%= link_to 'Delete Category', category_path(@category), 
                                         method: :delete, 
                                         class: 'btn btn-danger btn-md', 
                                         data: { confirm: "Are you sure you want to remove the category?" } %>
        <% end %>
        <%= link_to 'Back to Categories', categories_path, class: 'btn btn-default btn-md' %>
      </div>
    </div>
  <% end %>
</section>
